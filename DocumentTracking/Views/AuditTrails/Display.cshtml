@model IEnumerable<DocumentTracking.Models.DataModels.AuditTrail>
@{
    ViewBag.Title = "Audit Trail";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Audit Trail</h2>

<div class="row">
    <div class="col-md-12">
        <div class="bgc-white bd bdrs-3 p-20 mB-20">
            @*<h4 class="c-grey-900 mB-20">Bootstrap Data Table</h4>*@
            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Module</th>
                        <th>Action</th>
                        <th>Username</th>
                        <th>Action Date</th>
                        <th>MainID</th>
                        <th>Record ID</th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Module</td>
                            <td>@item.Action</td>
                            <td>@item.UserID</td>
                            <td>@item.TDate</td>
                            <td>@item.MainID</td>
                            <td width="10px">@item.RecordID</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

