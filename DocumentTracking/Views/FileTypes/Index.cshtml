@model IEnumerable<DocumentTracking.Models.FileType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="bgc-white p-20 bd">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FileTypeId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FileTypeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FileTypeId })
                </td>
            </tr>
        }

    </table>
    </div>