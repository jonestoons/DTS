@model DocumentTracking.Models.DataModels.MsgSetup
@{
    ViewBag.Title = "Message Setup";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Message Setup</h2>

<div class="bgc-white p-20 bd">
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="col-lg-4 label">Email Address</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-lg-5" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="col-lg-4 label">Password</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-lg-5" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="col-lg-4 label">Host</label>
            @Html.TextBoxFor(m => m.Host, new { @class = "form-control col-lg-5" })
            @Html.ValidationMessageFor(m => m.Host, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="col-lg-4 label">Port</label>
            @Html.TextBoxFor(m => m.Port, new { @class = "form-control col-lg-5" })
            @Html.ValidationMessageFor(m => m.Port, "", new { @class = "text-danger" })
        </div>
        <hr />
        <div class="form-group row">
            @*<div class="col-sm-2">Checkbox</div>*@
            <div class="col-sm-10">
                <div class="form-check">
                    <label class="form-check-label">
                        @Html.CheckBoxFor(model => model.Backlog, new { @class = "form-check-input" })
                        @*<input class="form-check-input" type="checkbox" name="BackLog" value="@Model.Backlog">*@ Enable BackLog
                    </label>
                </div>
            </div>
        </div>

            <input type="submit" name="" value="Save" class="btn btn-info" />
        }
    </div>
</div>
